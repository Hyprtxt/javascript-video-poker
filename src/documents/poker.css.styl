body
	margin: 0
	background: blue
	font-family: sans-serif
	color: yellow
	text-transform: uppercase
	text-shadow: 2px 2px 0 black
	font-size: 22px

table
	width: 100%
	background: navy
	border: 1px solid yellow
	border-collapse: collapse
	font-weight: bold
	font-size: 16px
td
	border-left: 1px solid yellow
	padding: 0 4px
	text-align: right
.label
	text-align: left
tr:nth-child(even)
	background: lighten(navy, 5)
tr:nth-child(odd)
	background: navy

.message
	text-transform: uppercase
	font-size: 22px
	padding: 5px 10px 0 10px
	width: 45%
	float: left
.credits
	float: right
	text-align: right

.cards, .buttons
	clear: both
	max-width: 760px
	margin: 0 auto
.card_unit
	float: left
	width: 152px
	height: 275px
.card
	width: 140px
	height: 195px
	background-color: white
	border: 3px solid white
	border-radius: 5px
	margin: 7px
	position: relative
	box-shadow: inset 0 0 1px 1px black;
	.suit
		width: 100px
		height: 133px
		background-image: url(suits_sprite.png)
		background-size: 400px 133px
		margin: 50px auto 0 auto
	.value
		position: absolute
		font-size: 50px
		text-shadow: none
		font-weight: bold
		top: 0px
		left: 10px
.card.hold
	border: 3px solid red
button
	width: 140px
	height: 50px
	background: yellow
	margin: 5px 8px
	border: none
	border-radius: 10px
	font-size: 22px
	font-weight: bold
button:hover
	background: darken( yellow, 3 )

.buttons button
	float: right
	width: 200px

.undefined
	background: navy
.diamonds .suit
	background-position: 0 0
.clubs .suit
	background-position: -100px 0
.hearts .suit
	background-position: -200px 0
.spades .suit
	background-position: -300px 0

.diamonds .value, .hearts .value
	color: red
.clubs .value, .spades .value
	color: black
