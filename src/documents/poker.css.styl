body
	margin: 0
	background: blue
	font-family: sans-serif
	color: yellow
	text-transform: uppercase
	text-shadow: 2px 2px 0 black
	font-size: 22px

table
	width: 100%
	background: navy
	border-bottom: 2px solid yellow
	border-collapse: collapse
	font-weight: bold
	font-size: 12px
	display: block

td
	border-left: 1px solid yellow
	padding: 0 4px
	text-align: right
.label
	text-align: left
tr:nth-child(even)
	background: lighten(navy, 5)
tr:nth-child(odd)
	background: navy

.text-right 
	float: right

.clearfix:before,
.clearfix:after
	display: table
	content: " "

.clearfix:after
	clear: both

.score-holder
	position: relative

.tab 
	width: 100px
	background: #00004d
	border: 2px solid #ff0
	position: absolute
	bottom: -28px
	right: 130px
	border-radius: 0 0 5px 5px
	font-size: 16px
	text-align: center
	padding: 4px
	cursor: pointer

.message
	text-transform: uppercase
	font-size: 14px
	width: 98%
	margin: 0 0px
	padding: 5px 1%
	clear: both
.credits
	float: right
	text-align: right
	width: 30%

.cards, .buttons
	clear: both
	margin: 0 auto
.cards
	margin-bottom: 10px
.card_unit
	float: left
	width: 20%
.card
	width: 92%
	// height: 71%
	background-color: white
	border: 2px solid white
	border-radius: 5px
	margin: 0
	position: relative
	box-shadow: inset 0 0 1px 1px black
	padding-bottom: 135%
	.suit
		width: 73%
		height: 68%
		background-size: 100% 100%
		position: absolute
		left: 13.5%
		top: 20%
	.value
		position: absolute
		font-size: 30px
		text-shadow: none
		font-weight: bold
		top: 0px
		left: 10px
.card.hold
	border: 2px solid red
button
	width: 94%
	height: 30px
	background: yellow
	margin: 1px
	border: none
	border-radius: 10px
	font-size: 14px
	font-weight: bold
button:hover
	background: darken( yellow, 3 )

.buttons button
	float: right
	width: 45%

.undefined
	background: navy
.diamonds .suit
	background-image: url(diamond.svg)
.clubs .suit
	background-image: url(club.svg)
.hearts .suit
	background-image: url(heart.svg)
.spades .suit
	background-image: url(spade.svg)

.diamonds .value, .hearts .value
	color: red
.clubs .value, .spades .value
	color: black

@media (min-width: 480px)
	.card
		margin: 5px 7px
		.value
			font-size: 35px
	button, .message, table
		font-size: 16px
	button
		margin: 0 7px
		height: 30px

@media (min-width: 760px)
	.card
		border: 3px solid white
		.value
			font-size: 50px
	.card.hold
		border: 3px solid red
	button, .message, table
		font-size: 22px
	button
		height: 50px
	.tab-scoring
		right: 180px
		bottom: -35px
		padding: 4px 12px


@media (min-width: 980px)
	.card
		border: 3px solid white
		margin: 7px
	.card .value
		font-size: 70px
	button, .message, .tab-scoring
		font-size: 32px
	button
		height: 70px


@media (min-width: 1200px)
	.card
		border: 5px solid white
	.card.hold
		border: 5px solid red
	.card .value
		font-size: 80px
	button, .message, .tab-scoring
		font-size: 40px
	button
		height: 70px


@media (min-width: 1400px)
	.card
		border: 7px solid white
		.value
			font-size: 90px
	.card.hold
		border: 7px solid red
