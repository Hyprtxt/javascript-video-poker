body
	margin: 0
	background: blue
	font-family: sans-serif
	color: yellow
	text-transform: uppercase
	text-shadow: 2px 2px 0 black
	font-size: 22px

table
	width: 100%
	background: navy
	border: 1px solid yellow
	border-collapse: collapse
	font-weight: bold
	font-size: 16px
td
	border-left: 1px solid yellow
	padding: 0 4px
	text-align: right
.label
	text-align: left
tr:nth-child(even)
	background: lighten(navy, 5)
tr:nth-child(odd)
	background: navy

.message
	text-transform: uppercase
	font-size: 22px
	padding: 5px 10px 0 10px
	width: 45%
	float: left
.credits
	float: right
	text-align: right

.cards, .buttons
	clear: both
	max-width: 760px
	margin: 0 auto
.card_unit
	float: left
	width: 152px
	height: 275px
.card
	width: 140px
	height: 195px
	background-image: url(cards.png);
	border: 5px solid white
	border-radius: 5px
	margin: 5px
.card.hold
	border: 5px solid red
button
	width: 140px
	height: 50px
	background: yellow
	margin: 5px 8px
	border: none
	border-radius: 10px
	font-size: 22px
	font-weight: bold
button:hover
	background: darken( yellow, 3 )

.buttons button
	float: right
	width: 200px

.undefined
	background: navy
