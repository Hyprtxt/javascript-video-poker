body
	background: blue
	font-family: sans-serif
	color: white

.cards, .buttons
	clear:both;

button
	width: 140px
	height: 50px
	background: yellow
	margin: 5px
	border: none
	border-radius: 10px
	font-size: 22px

.message
	text-transform: uppercase
	font-size: 22px
	padding: 5px 5px 20px 5px

.card
	width: 140px
	height: 195px
	background-image: url(cards.png);
	float: left
	border: 5px solid white
	border-radius: 5px
	margin: 5px

.card.hold
	border: 5px solid red

